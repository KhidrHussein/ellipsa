{
  "name": "@ellipsa/edge-agent",
  "version": "0.1.0",
  "private": true,
  "main": "dist/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "npm run build && npm start",
    "build": "npm run build:main && npm run build:renderer && npm run build:preload",
    "build:main": "tsc -p tsconfig.json",
    "build:renderer": "webpack --config webpack.renderer.config.js",
    "build:preload": "webpack --config webpack.preload.config.js",
    "watch:main": "tsc -w -p tsconfig.json",
    "watch:renderer": "webpack --watch --config webpack.renderer.config.js",
    "watch:preload": "webpack --watch --config webpack.preload.config.js",
    "watch": "concurrently -k -n \"MAIN,RENDERER,PRELOAD\" -c \"bgBlue.bold,bgGreen.bold,bgYellow.bold\" \"tsc -w -p tsconfig.json\" \"webpack --watch --config webpack.renderer.config.js\" \"webpack --watch --config webpack.preload.config.js\"",
    "dev:watch": "concurrently \"npm run watch\" \"wait-on dist/main.js && npm start\"",
    "package": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "@ellipsa/action": "workspace:*",
    "@ellipsa/prompt": "workspace:^0.1.0",
    "electron": "^31.3.0",
    "sharp": "^0.34.4",
    "tesseract.js": "^6.0.1"
  },
  "devDependencies": {
    "@types/dom-mediacapture-record": "^1.0.22",
    "@types/dom-webcodecs": "^0.1.16",
    "@types/electron": "^1.6.12",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^24.6.2",
    "@types/uuid": "^8.3.4",
    "@types/w3c-web-usb": "^1.0.13",
    "@types/webrtc": "^0.0.46",
    "axios": "^1.12.2",
    "buffer": "^6.0.3",
    "concurrently": "^8.2.1",
    "crypto-browserify": "^3.12.1",
    "css-loader": "^7.1.2",
    "fs-extra": "^11.3.2",
    "os-browserify": "^0.3.0",
    "path-browserify": "^1.0.1",
    "stream-browserify": "^3.0.0",
    "style-loader": "^4.0.0",
    "ts-loader": "^9.5.4",
    "ts-node": "^10.9.2",
    "tsconfig-paths-webpack-plugin": "^4.2.0",
    "typescript": "^5.9.2",
    "uuid": "8.3.2",
    "wait-on": "^7.1.0",
    "webpack": "^5.102.1",
    "webpack-cli": "^6.0.1",
    "webpack-merge": "^6.0.1",
    "webpack-node-externals": "^3.0.0",
    "zod": "^3.23.8"
  }
}
