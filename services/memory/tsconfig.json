{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": ".",
    "baseUrl": ".",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "module": "NodeNext",
    "target": "ES2022",
    "moduleDetection": "force",
    "types": ["node", "jest"],
    "typeRoots": [
      "./node_modules/@types"
    ],
    "paths": {
      "@ellipsa/shared": ["../../packages/shared/src/index.ts"],
      "@/*": ["./src/*"]
    },
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": false,
    "noEmit": false
  },
  "include": [
    "src/**/*.ts",
    "migrations/**/*.ts",
    "tests/**/*.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
