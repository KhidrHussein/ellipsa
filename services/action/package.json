{
  "name": "@ellipsa/action",
  "version": "0.1.0",
  "type": "module",
  "main": "dist/server.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/server.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "@ellipsa/memory": "workspace:*",
    "@ellipsa/prompt": "workspace:*",
    "@ellipsa/shared": "workspace:*",
    "@types/node-schedule": "^2.1.8",
    "axios": "^1.12.2",
    "dotenv": "^17.2.3",
    "express": "^4.19.2",
    "google-auth-library": "^10.4.2",
    "googleapis": "^164.1.0",
    "knex": "^3.1.0",
    "node-schedule": "^2.1.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/axios": "^0.14.4",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.19.19",
    "@types/nodemailer": "^7.0.3",
    "@types/nodemailer-direct-transport": "^1.0.35",
    "@types/nodemailer-smtp-transport": "^2.7.8",
    "@types/pg": "^8.11.2",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "electron": "^31.3.0",
    "esbuild": "^0.20.2",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "playwright": "^1.56.1",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "tsup": "^8.0.2",
    "tsx": "^4.19.0",
    "typescript": "^5.5.4"
  },
  "scripts": {
    "build": "tsup",
    "build:types": "tsc --emitDeclarationOnly --declaration --declarationMap",
    "dev": "tsx watch src/server.ts",
    "start": "node dist/server.js",
    "migrate": "tsx src/scripts/migrate-to-new-services.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "clear-tokens": "tsx src/scripts/clear-tokens.ts"
  }
}
